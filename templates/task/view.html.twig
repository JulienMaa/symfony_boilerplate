{% extends 'base.html.twig' %}

{% block title %}View Task{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>{{ task.name }} #{{ task.id }}</h2>
        <p><strong>Description:</strong> {{ task.description }}</p>
        <p><strong>Author:</strong> {{ task.author.username }}</p>
        <p><strong>Created:</strong> {{ task.getFormattedCreatedAt() }}</p>
        <p><strong>Updated:</strong> {{ task.getFormattedUpdatedAt() }}</p>

        <div class="btn-group mt-3">
            <a href="{{ path('task_edit', { id: task.id }) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('task_delete', { id: task.id }) }}" class="btn btn-danger">Delete</a>
        </div>
    </div>
{% endblock %}
